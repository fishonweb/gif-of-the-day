{
  "name": "Gif of the day",
  "manifest_version": 2,
  "description": "Gif of the day",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "index.html",
    "default_title": "Gif of the day"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "http://*/",
    "https://*/*",
    "https://www.google.com/*",
    "http://www.google.com/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com; object-src 'self'"
}
